plugin: kubevirt.core.kubevirt
namespaces:
- {{ pod_namespace }}
label_selector: ci_job_id={{ ci_job_id }}
create_groups: true
compose:
  ci_groups: |
    group_names |
    select('ansible.builtin.match', 'label_kubespray_io*') |
    map('regex_replace', 'label_kubespray_io_(.*)_true', '\1')
use_service: false
host_format: "{name}"
keyed_groups:
- key: ci_groups
  prefix: ""
  separator: ""
