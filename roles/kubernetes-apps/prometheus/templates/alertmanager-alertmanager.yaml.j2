apiVersion: monitoring.coreos.com/v1
kind: Alertmanager
metadata:
  labels:
    alertmanager: main
  name: main
  namespace: {{ prometheus_namespace }}
spec:
  baseImage: {{ alertmanager_image_repo }}
  nodeSelector:
    beta.kubernetes.io/os: linux
  replicas: 3
  serviceAccountName: alertmanager-main
  version: {{ alertmanager_image_tag }}
