apiVersion: v1
kind: ConfigMap
metadata:
  name: nodelocaldns
  namespace: kube-system
  labels:
    addonmanager.kubernetes.io/mode: EnsureExists

data:
  Corefile: |
    {{ dns_domain }}:53 {
        errors
        cache 30
        reload
        loop
        bind {{ local_dns_ip }}
        forward . {{ clusterIP }} {
                force_tcp
        }
        prometheus :9253
        health {{ local_dns_ip }}:8080
        }
    in-addr.arpa:53 {
        errors
        cache 30
        reload
        loop
        bind {{ local_dns_ip }}
        forward . {{ clusterIP }} {
                force_tcp
        }
        prometheus :9253
        }
    ip6.arpa:53 {
        errors
        cache 30
        reload
        loop
        bind {{ local_dns_ip }}
        forward . {{ clusterIP }} {
                force_tcp
        }
        prometheus :9253
        }
    .:53 {
        errors
        cache 30
        reload
        loop
        bind {{ local_dns_ip }}
        forward . /etc/resolv.conf {
                force_tcp
        }
        prometheus :9253
        }
