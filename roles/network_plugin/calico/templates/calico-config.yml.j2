kind: ConfigMap
apiVersion: v1
metadata:
  name: calico-config
  namespace: kube-system
data:
  etcd_endpoints: "{{ etcd_access_addresses }}"
  etcd_ca: "/calico-secrets/ca_cert.crt"
  etcd_cert: "/calico-secrets/cert.crt"
  etcd_key: "/calico-secrets/key.pem"
{% if calico_network_backend is defined and calico_network_backend == 'none' %}
  cluster_type: "kubespray"
  calico_backend: "none"
{% else %}
  cluster_type: "kubespray,bgp"
  calico_backend: "bird"
{% endif %}
{% if inventory_hostname in groups['k8s-cluster'] and peer_with_router|default(false) %}
  as: "{{ local_as|default(global_as_num) }}"
{% endif -%}
  # Configure the MTU to use
  veth_mtu: {{ calico_mtu }}
  cni_network_config: |-
    {
      "name": "cni0",
      "cniVersion":"0.3.1",
      "plugins":[
        {
{% if cloud_provider is defined %}
          "nodename": "{{ calico_kubelet_name.stdout }}",
        {% else %}
          "nodename": "{{ calico_baremetal_nodename }}",
        {% endif %}
          "type": "calico",
          "etcd_endpoints": "{{ etcd_access_addresses }}",
          "etcd_cert_file": "{{ etcd_cert_dir }}/node-{{ inventory_hostname }}.pem",
          "etcd_key_file": "{{ etcd_cert_dir }}/node-{{ inventory_hostname }}-key.pem",
          "etcd_ca_cert_file": "{{ etcd_cert_dir }}/ca.pem",
          "log_level": "info",
          "ipam": {
            "type": "calico-ipam",
            "assign_ipv4": "true",
            "ipv4_pools": ["{{ kube_pods_subnet }}"]
          },
{% if enable_network_policy %}
          "policy": {
            "type": "k8s"
          },
{%- endif %}
{% if calico_mtu is defined and calico_mtu is number %}
          "mtu": {{ calico_mtu }},
{%- endif %}
          "kubernetes": {
            "kubeconfig": "{{ kube_config_dir }}/node-kubeconfig.yaml"
          }
        },
        {
          "type":"portmap",
          "capabilities":{
            "portMappings":true
          }
        }
      ]
    }
