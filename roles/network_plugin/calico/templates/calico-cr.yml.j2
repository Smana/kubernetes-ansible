# Latest suggested permissions can be found here:
# https://github.com/projectcalico/calico/blob/master/_includes/master/manifests/rbac.yaml
---
kind: ClusterRole
apiVersion: rbac.authorization.k8s.io/v1beta1
metadata:
  name: calico-node
  namespace: kube-system
rules:
  # The CNI plugin needs to get pods, nodes, and namespaces
  - apiGroups: [""]
    resources:
      - pods
      - nodes
      - namespaces
    verbs:
      - get
  # Needed for clearing NodeNetworkUnavailable flag
  - apiGroups: [""]
    resources:
      - nodes/status
    verbs:
      - patch
