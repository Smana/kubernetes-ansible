apiVersion: v1
kind: Service
metadata:
  name: coredns
  namespace: {{ system_namespace }}
  labels:
    k8s-app: coredns
    kubernetes.io/cluster-service: "true"
    kubernetes.io/name: "coredns"
spec:
  selector:
    k8s-app: coredns
  clusterIP: {{ coredns_server }}
  ports:
  - name: dns
    port: 53
    protocol: UDP
  - name: dns-tcp
    port: 53
    protocol: TCP
