[Unit]
Description=Certificates rotation service for Kubernetes
Documentation=https://kubernetes.io/docs/tasks/administer-cluster/kubeadm/kubeadm-certs/#manual-certificate-renewal

[Service]
Type=simple
ExecStart=/bin/bash -c "for cert in {apiserver-kubelet-client,apiserver,controller-manager.conf,front-proxy-client,scheduler.conf}; do kubeadm alpha certs renew $cert; done"
