{
  "name": "canal-k8s-network",
  "type": "flannel",
  "delegate": {
    "type": "calico",
    "etcd_endpoints": "{{ etcd_access_endpoint }}",
    "log_level": "info",
    {% if enable_network_policy is defined and enable_network_policy == True %}
      "policy": {
        "type": "k8s"
      },
    {% endif %}
    "kubernetes": {
      "kubeconfig": "{{ kube_config_dir }}/node-kubeconfig.yaml"
    }
  }
}
